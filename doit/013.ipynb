   "source": [
    "from collections import deque\n",
    "\n",
    "N = int(input())\n",
    "dq = deque()\n",
    "\n",
    "for i in range(N):\n",
    "    dq.append(i+1)\n",
    "\n",
    "while len(dq) > 1:\n",
    "    dq.popleft()\n",
    "    t = dq.popleft()\n",
    "    dq.append(t)\n",
    "\n",
    "result = dq[0]\n",
    "print(result)"
   ]
  }
